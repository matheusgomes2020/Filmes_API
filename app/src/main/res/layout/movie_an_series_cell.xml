<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/movieAndSeriesCellContainer"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:elevation="100dp"
    android:padding="3dp"
    app:cardCornerRadius="5dp"
    tools:layout_editor_absoluteX="5dp"
    tools:layout_editor_absoluteY="5dp">

    <ImageView
        android:id="@+id/imageViewMovieAndSeries"
        android:layout_width="110dp"
        android:layout_height="150dp"
        android:background="@drawable/bg_p"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@color/material_dynamic_neutral10"
        tools:srcCompat="@tools:sample/avatars">

    </ImageView>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewMovieAndSeries">

        <TextView
            android:id="@+id/nomeOrTitle"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:maxLines="1"
            android:text="Avatar"
            android:textColor="#434242"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@+id/overviewSearchCell"
            app:layout_constraintEnd_toEndOf="@+id/imageSearchCell"
            app:layout_constraintStart_toEndOf="@+id/imageSearchCell"
            app:layout_constraintTop_toBottomOf="@+id/id">

        </TextView>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>