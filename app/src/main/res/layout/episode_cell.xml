<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/episode_cellContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg"
    android:padding="5dp"
    android:layout_margin="10dp"
    app:cardCornerRadius="5dp"
    tools:layout_editor_absoluteX="5dp"
    tools:layout_editor_absoluteY="5dp">

    <ImageView
        android:id="@+id/imageEpisode"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@color/material_dynamic_neutral10"
        tools:srcCompat="@tools:sample/avatars">

    </ImageView>


    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:layout_marginStart="5dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageSearchCell">

        <TextView
            android:id="@+id/text1"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="Avatar"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/ratingSearchCell"
            app:layout_constraintEnd_toEndOf="@+id/imageSearchCell"
            app:layout_constraintStart_toEndOf="@+id/imageSearchCell"
            app:layout_constraintTop_toBottomOf="@+id/id"></TextView>

        <TextView
            android:id="@+id/text2"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="ewewewewew"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="157dp"
            tools:layout_editor_absoluteY="402dp"></TextView>

        <TextView
            android:id="@+id/text3"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="ewewewewew"
            android:textSize="18sp"
            android:maxLines="3"
            tools:layout_editor_absoluteX="157dp"
            tools:layout_editor_absoluteY="402dp"></TextView>


    </LinearLayout>


</LinearLayout>